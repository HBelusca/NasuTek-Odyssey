LANGUAGE LANG_ENGLISH, SUBLANG_ENGLISH_US

IDC_ODYSSEY_SNDREC32 ACCELERATORS
BEGIN
    "?",            IDM_ABOUT,              ASCII,  ALT
    "/",            IDM_ABOUT,              ASCII,  ALT
END

IDD_ABOUTBOX DIALOGEX 0, 0, 196, 75
STYLE DS_SETFONT | DS_MODALFRAME | DS_FIXEDSYS | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Information about Odyssey Sound Recorder"
FONT 8, "MS Shell Dlg", 0, 0, 0x1
BEGIN
    ICON            IDI_SNDREC32,-1,19,14,21,20
    LTEXT           "Odyssey Sound Recorder, version 1.0",IDC_STATIC,56,16,114,8,SS_NOPREFIX
    LTEXT           "Copyright (C) 2009",IDC_STATIC,55,25,114,8
    DEFPUSHBUTTON   "OK",IDOK,139,54,50,14,WS_GROUP
END

IDR_MENU1 MENU
BEGIN
    POPUP "File"
    BEGIN
        MENUITEM "New",                         ID_NEW
        MENUITEM "Open...",                     ID_FILE_OPEN
        MENUITEM "Save",                        ID_FILE_SAVE, GRAYED
        MENUITEM "Save As...",                  ID_FILE_SAVEAS, GRAYED
        MENUITEM SEPARATOR
        MENUITEM "Exit",                        ID_EXIT
    END
    MENUITEM "todo1",                       0
    MENUITEM "todo2",                       0
    POPUP "?"
    BEGIN
        MENUITEM "About...",                    ID__ABOUT
    END
END

